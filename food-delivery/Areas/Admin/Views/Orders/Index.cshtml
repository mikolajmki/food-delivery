@model IEnumerable<Presentation.ApiModels.OrderHeaderApiModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">List of Orders</h2>
    </div>
    <div class="col-6">
        <a asp-controller="orders" asp-action="Index" asp-route-status="pedning">Pending</a>
        <a asp-controller="orders" asp-action="Index" asp-route-status="approved">Approved</a>
        <a asp-controller="orders" asp-action="Index" asp-route-status="underprocess">Under Process</a>
        <a asp-controller="orders" asp-action="Index" asp-route-status="shipped">Shipped</a>
        <a asp-controller="orders" asp-action="Index" asp-route-status="All">All</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                Total
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @item.OrderTotal.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.ActionLink("Details", "OrderDetails", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
